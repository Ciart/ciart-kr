---
import { getCollection, render, type CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Prose from '../../components/Prose.astro';
import { getPostDateText } from '../../helpers/date';

interface Props {
  post: CollectionEntry<'blog'>;
}

export async function getStaticPaths() {
  const posts = await getCollection('blog');

  return posts.map((post) => {
    // if (post.id === 'index') {
    //   return { params: { slug: '' }, props: { post } };
    // }

    return {
      params: { slug: post.id },
      props: { post },
    };
  });
}

const { post } = Astro.props;
const { Content } = await render(post);

const tags = post.data.tags ?? [];
const tagsText = tags.map((tag) => `#${tag}`).join(' ');
---

<Layout>
  <div class="flex items-end mb-6 justify-between">
    <h1 class="title">{post.data.title}</h1>
    <div class="flex flex-col items-end text-sm ml-2 py-1">
      <p class="text-blue-400">{tagsText}</p>
      <p>{getPostDateText(post)}</p>
    </div>
  </div>
  <Prose>
    <Content />
  </Prose>
</Layout>

