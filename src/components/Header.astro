---
type Props = {
    isDarkMode?: boolean;
}

const { isDarkMode } = Astro.props;
---

<div
    class="flex justify-between items-center max-lg:container lg:w-5xl mx-auto px-4 h-header-height"
>
    <a class="flex justify-center items-center" href="/">
        <img
            src="/images/logo-pixel.png"
            alt="Ciart"
            class="w-8 h-8 pixelated"
        />
    </a>
    <div class:list={["flex items-center text-sm", isDarkMode && "text-white"]}>
        <a class="flex px-2" href="/blog">blog</a>
        <a class="flex px-2" href="/about">about</a>
    </div>
</div>
